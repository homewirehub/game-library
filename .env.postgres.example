# PostgreSQL Configuration Example
# Copy this to .env to use PostgreSQL for production

# Database Configuration
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=gamelib_user
DB_PASSWORD=your_secure_password
DB_DATABASE=gamelib

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# Storage Configuration
STORAGE_PATH=./storage
MAX_FILE_SIZE=2147483648

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=10

# Installation
INSTALLED=true
INSTALLATION_DATE=2025-01-01T00:00:00.000Z
