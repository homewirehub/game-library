# SQLite Configuration Example
# Copy this to .env to use SQLite for development

# Database Configuration
DB_TYPE=sqlite
DB_DATABASE=./data/gamelib.db

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# Storage Configuration
STORAGE_PATH=./storage
MAX_FILE_SIZE=2147483648

# Security
JWT_SECRET=your-super-secret-jwt-key-here
BCRYPT_ROUNDS=10

# Installation
INSTALLED=true
INSTALLATION_DATE=2025-01-01T00:00:00.000Z
