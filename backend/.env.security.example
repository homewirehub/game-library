# File Upload Security Configuration

# Maximum file size for uploads (in bytes)
# Default: 2GB (2147483648 bytes)
UPLOAD_MAX_FILE_SIZE=2147483648

# Upload directory path
# Default: ./uploads/games
UPLOAD_DIR=./uploads/games

# Enable virus scanning for uploaded files
# Requires ClamAV or Windows Defender
# Default: false
VIRUS_SCAN_ENABLED=false

# Reject files if virus scan fails (scanner unavailable or error)
# If false, allows files when scan fails
# Default: true
REJECT_ON_SCAN_FAILURE=true

# Rate limiting for file uploads
# Window: 1 hour, Max: 10 uploads, Block: 30 minutes
UPLOAD_RATE_LIMIT_WINDOW=3600000
UPLOAD_RATE_LIMIT_MAX=10
UPLOAD_RATE_LIMIT_BLOCK=1800000
